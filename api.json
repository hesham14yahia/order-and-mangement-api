                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "enum": [
                                                "Order deleted successfully"
                                            ]
                                        }
                                    },
                                    "required": [
