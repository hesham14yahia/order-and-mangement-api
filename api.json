        "/v1/payments/charge/{order}": {
            "post": {
                "operationId": "payment.charge",
                "summary": "payment charge for an order",
                "tags": [
                    "Payment"
                ],
                "parameters": [
                    {
                        "name": "order",
                        "in": "path",
                        "required": true,
